<Window x:Class="menusystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menusystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" SizeToContent="WidthAndHeight" Topmost="False" WindowState="Normal" Icon="./Resources/favicon.ico">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="menuNew" Header="_New" 
                          InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                    <Image Source="./Resources/new.ico"/>
                    </MenuItem.Icon>
                          </MenuItem>
                </MenuItem>
        </Menu>

        <TextBox x:Name="txtBoxDoc" Height="290" Width="500"/>


    </DockPanel>
</Window>
